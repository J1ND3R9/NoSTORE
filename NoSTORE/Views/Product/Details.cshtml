<div id="charts" style="margin: auto;">
    <div id="chartsContent">
        <canvas id="priceChart" width="800" height="400"></canvas>
    </div>
</div>


<script>
    Chart.defaults.font.family = "Strong";
    Chart.defaults.font.size = 16;
    Chart.defaults.color = "#E0E0E0";

    const ctx = document.getElementById('priceChart').getContext('2d');

    const data = {
    labels: [@Html.Raw(string.Join(",", Model.Product.PriceHistory.Select(ph => "'" + ph.Date.ToString("dd.MM.yyyy") + "'")))],
    datasets: [{
    label: 'Цена',
    data: [@string.Join(",", Model.Product.PriceHistory.Select(ph => ph.Price))],
    fill: false,
    borderColor: 'rgb(75, 192, 192)',
    tension: 0.1
    }]
    };

    const config = {
    type: 'line',
    data: data,
    options: {
    responsive: true,
    color: '#E0E0E0',
    plugins: {
    title: {
    display: true,
    text: 'Изменение цены во времени',
    font: {
    weight: 'none'
    },
    },
    legend: {
    labels: {
    color: '#E0E0E0'
    }
    },
    tooltip: {
    mode: 'index',
    intersect: false,
    titleColor: '#E0E0E0'
    },
    hover: {
    mode: 'nearest',
    intersect: true
    }
    }
    }
    };

    new Chart(ctx, config);
</script>
