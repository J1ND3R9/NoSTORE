    slidesPerView: 4,
    spaceBetween: 73,
    loop: false,


    breakpoints: {
    320: {
    slidesPerView: 1,
    },
    768: {
    slidesPerView: 2,
    },
    1024: {
    slidesPerView: 4,
    },
    },

    navigation: {
    nextEl: '.swiper-button-next',
    prevEl: '.swiper-button-prev',
    },

    });
    });
</script>

