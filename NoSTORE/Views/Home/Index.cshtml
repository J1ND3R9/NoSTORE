<section class="main_recs">
    <div class="section__title">
        <h3>Подобрали под ваши предпочтения:</h3>
    </div>
    <div class="swiper recs__slider">
        <div class="swiper-wrapper">
            @foreach (var product in Model)
            {
                <div class="swiper-slide">
                    <div class="product">
                        <a href="/@product.Id">
                            <div>
                                <div class="product__image">
                                    @if (product.ImageExist())
                                    {
                                        <img src="~/photos/products/@product.Name/@product.Images[0]" />
                                    }
                                    else
                                    {
                                        <img src="https://placehold.co/240" />
                                    }
                                </div>
                                <h3>@product.Name</h3>
                                <p class="product__tags">@product.TagsInString()</p>
                                <div class="product__rating">
                                    <img src="~/svg/activites/noact/star.svg" />
                                    <p>4.9</p>
                                </div>
                            </div>
                        </a>
                        <div class="product__activity">
                            <p>@product.CorrectPrice() ₽</p>
                            <div class="product__buttons">
                                <div class="product__favorite">
                                    <button type="button" aria-label="Добавить в избранное">
                                        <img src="~/svg/activites/noact/fav.svg" />
                                    </button>
                                </div>
                                <div class="product__basket">
                                    <button type="button" aria-label="Добавить в корзину">
                                        <img src="~/svg/activites/noact/bsk.svg" />
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Навигация -->
        <div class="swiper-button-prev"></div>
        <div class="swiper-button-next"></div>
    </div>
</section>

