    <link rel="stylesheet" href="~/css/@ViewData["CSS"]" asp-append-version="true" />
    <link rel="icon" href="~/svg/logo.svg" type="image/svg+xml" />
</head>
<body>
    <header>
        <nav>
            <div class="left">
                <a class="site_logo" href="/">
                    <img src="~/svg/nostore.svg" />
                </a>
                <a class="catalog__button" href="/catalog">
